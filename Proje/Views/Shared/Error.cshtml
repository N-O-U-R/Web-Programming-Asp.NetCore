@using Microsoft.AspNetCore.Mvc.Localization
@model ErrorViewModel
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">@localizer["Error."]</h1>
<h2 class="text-danger">@localizer["An error occurred while processing your request."]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@localizer["Request ID:"]</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@localizer["Development Mode"]</h3>
<p>
    Swapping to <strong>@localizer["Development"]</strong> @localizer["environment will display more detailed information about the error that occurred."]
</p>
<p>
    <strong>@localizer["The Development environment shouldn't be enabled for deployed applications."]</strong>
    @localizer["It can result in displaying sensitive information from exceptions to end users."]
    For local debugging, enable the <strong>@localizer["Development"]</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>@localizer["Development"]</strong>
    and restarting the app.
</p>
