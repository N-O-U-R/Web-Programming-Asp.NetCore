            <th></th>
        </tr>
    </thead>*@
    <tbody>
@foreach (var item in Model) {
        <tr class="list-box">
            <td width="30%">
                    <img src="@item.showPoster" class="img-card" asp-append-version="true">
            </td>
                <td class="pl">
                @Html.DisplayFor(modelItem => item.showTitle)
            </td>
            <td class="text-left">
                    <i class="fa-solid fa-star"></i>
                @Html.DisplayFor(modelItem => item.showRating)
            </td>
           @* <td>
                <a asp-action="Edit" asp-route-id="@item.showId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.showId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.showId">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
        $("#sortBy").on('change', function () {
            document.forms["Form"].submit();
        });
    </script>
